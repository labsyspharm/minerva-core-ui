{
  "compilerOptions": {
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "strict": false,
    "outDir": "./build",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "lib": ["esnext", "DOM", "DOM.Iterable"]
  },
  "include": ["src", "index.tsx"]
}
