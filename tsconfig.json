{
  "compilerOptions": {
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "es2022",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "outDir": "./build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"]
  },
  "include": ["src"]
}
